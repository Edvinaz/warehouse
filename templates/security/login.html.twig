{% extends 'empty.html.twig' %}

{% block title %}
	{% trans %}Log in!{% endtrans %}
{% endblock %}

{% block body %}

	<div class="wrapper vh-100">
		<div class="row align-items-center h-100">
			<form class="col-lg-3 col-md-4 col-10 mx-auto text-center" method="post">
				<a class="navbar-brand mx-auto mt-2 flex-fill text-center" href="./index.html">
					<img src="/images/logo.png" alt="..." style="height: 140px;">
				</a>
				<h1 class="h6 mb-3">{% trans %}Sign in{% endtrans %}</h1>

				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				{% if app.user %}
					<div class="mb-3">
						{% trans %}You are logged in as{% endtrans %}
						{{ app.user.username }},
						<a href="{{ path('app_logout') }}">
							{% trans %}Logout{% endtrans %}</a>
					</div>
				{% endif %}

				<div class="form-group">
					<label for="inputEmail" class="sr-only">
						{% trans %}Email address{% endtrans %}
					</label>
					<input type="email" name="email" id="inputEmail" class="form-control form-control-lg" placeholder="Email address" required="" autofocus="" value="admin@sandelys.pink">
				</div>
				<div class="form-group">
					<label for="inputPassword" class="sr-only">
						{% trans %}Password{% endtrans %}
					</label>
					<input type="password" name="password" id="inputPassword" class="form-control form-control-lg" placeholder="Password" required="" value="admin">
				</div>
				<input
				type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				{# <div class="checkbox mb-3">
								            <label>
								              <input type="checkbox" value="remember-me"> {% trans %}Stay logged in{% endtrans %} </label>
								          </div> #}
				<button class="btn btn-lg btn-primary btn-block" type="submit">
					{% trans %}Let me in{% endtrans %}
				</button>
				<p class="mt-5 mb-3 text-muted">Â© 2020</p>
			</form>
		</div>
	</div>


{% endblock %}
