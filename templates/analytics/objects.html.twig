{% extends 'base.html.twig' %}

{% block title %}Hello AnalyticsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <table class="table table-sm table-hover" width="100%">
    <thead>
        <tr>
            <th>Pavadinimas</th>
            <th width="17%">Užsakovas</th>
            <th width="8%">Rezervuota</th>
            <th width="8%">Nurašyta</th>
            <th width="8%">Paslaugos</th>
            <th width="8%">Darbas</th>
            <th width="8%">Pajamos</th>
            <th width="8%">Pelnas</th>
        </tr>
    </thead>
    <tbody>
    {% for item in list %}
        <tr class="{{ item.alert }}">
            <td>
                <a href="{{ path('object_info', {id: item.objectId}) }}">{{ item.name }}</a>
            </td>
            <td width="17%">
                <a href="{{ path('analytics_contrahent_objects', {contrahentId: item.id }) }}">{{ item.contrahent }}</a>
            </td>
            <td align="center" width="8%">{{ item.reservedMaterials|number_format(2, ',', ' ') }}</td>
            <td align="center" width="8%">{{ item.debited|number_format(2, ',', ' ') }}</td>
            <td align="center" width="8%">{{ item.services|number_format(2, ',', ' ') }}</td>
            <td align="center" width="8%">{{ item.workedHours|number_format(2, ',', ' ') }}</td>
            <td align="center" width="8%">{{ item.income|number_format(2, ',', ' ') }}</td>
            <td align="center" width="8%">{{ item.profit|number_format(2, ',', ' ') }}</td>
        </tr>
    {% endfor %}
    </tbody>
    </table>
    
</div>
{% endblock %}
