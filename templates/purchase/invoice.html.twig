{% extends 'base.html.twig' %}

{% block title %}{% trans %}Update Invoice details{% endtrans %}{% endblock %}

{% block body %}

    {% include('purchase/partials/menu.html.twig') %}

    {% include 'purchase/partials/invoice_header.html.twig' %}
    
    <div class="container">
        <div class="row invoiceHead">
            <div class="col-6">
                {% include 'purchase/partials/search.html.twig' %}

            </div>
            <div class="col-6">
                <div class="row">
                    <div class="col-4">{% trans %}Sum{% endtrans %}, €</div>
                    <div class="col-4">{% trans %}VAT{% endtrans %}, €</div>
                    <div class="col-4">{% trans %}Sum with VAT{% endtrans %}, €</div>
                </div>
                <div class="row">
                    <div class="col-4"><b>{{ invoice.amount|number_format(2, ',', ' ') }}</b></div>
                    <div class="col-4"><b>{{ invoice.vat|number_format(2, ',', ' ') }}</b></div>
                    {% set sum_with_vat = invoice.amount + invoice.vat %}
                    <div class="col-4"><b>{{ sum_with_vat|number_format(2, ',', ' ') }}</b></div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th>{% trans %}Name{% endtrans %}</th>
                        <th>{% trans %}Unit{% endtrans %}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for name in materials %}
                    <tr onclick="purchaseMaterial({{ name.id }}, {{ invoice.id }})">
                        <td>{{ name.name }}</td>
                        <td>{{ name.unit }}</td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
                <div>
                    {{ helper.currentMaterialsPage }} /
                    {{ helper.maxMaterialsPage }}
                    {# {% include 'helper/pagination.html.twig' with {
                        currentFilters: { myFilter: '' },
                        currentPage: helper.currentMaterialsPage,
                        lastPage: helper.maxMaterialsPage,
                        paginationPath: './',
                        showAlwaysFirstAndLast: true
                    } only %} #}
                </div>
            </div>
            <div class="col-6">
                {% include 'purchase/partials/invoice_materials.html.twig' %}
            </div>
        </div>
        <script>
            function purchaseMaterial(id, invoice) {
                window.location.replace(invoice + '/' + id);
            }

            function updatePurchasedMaterial(id, invoice) {
                window.location.replace(invoice + '/update/' + id);
            }

        </script>
    </div>
{% endblock %}
